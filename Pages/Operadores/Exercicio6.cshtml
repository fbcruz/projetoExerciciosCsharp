@page
@model Exercicios.Pages.Operadores.Exercicio6Model
@{
    ViewData["Title"] = "OP. Mat - Exerc.06";
}

<h1 class="text-center display-4"> Operadores Matemáticos</h1>
<h2 class="text-center display-4"> Exercício 6</h2>
<p>
    Faça um algoritmo que leia 2 números e ao final mostre a soma, subtração, multiplicação e divisão do primeiro
    pelo segundo. 

</p>
<form method="post">
    <div class="form-group">
        <label for="Nome">Digite o Número 1</label>
        <input type="text" class="form-control" id="numero1" name="numero1" placeholder="Informe primeiro número" required>
    </div>
        <div class="form-group">
        <label for="Nota1"> Digite o Número 2</label>
        <input type="text" class="form-control" nr_pagas="numero2" name="numero2" placeholder="Informe segundo número">
    </div>
    <button type="submit" class="btn btn-primary"> Calcular</button>
    <p class="mt-3 text-center">@ViewData["soma"]</p>
    <p class="mt-3 text-center">@ViewData["subtracao"]</p>
    <p class="mt-3 text-center">@ViewData["multiplicacao"]</p>
    <p class="mt-3 text-center">@ViewData["divisao"]</p>
    </form>
